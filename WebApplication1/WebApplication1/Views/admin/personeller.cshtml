
@{
    ViewBag.Title = "Personeller";
    Layout = "~/Views/admin/layout.cshtml";
}

@model IEnumerable<WebApplication1.Personel>


<section class="panel">
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br />
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/admin/personelEkle" name="yeniPersonel" class="btn btn-success">
                        @WebApplication1.Language.Localization.YeniPersonel <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <br />
            <div class="space15"></div>

            <table class="table table-striped table-hover table-bordered" id="editable-sample">

                <thead>
                    <tr>
                        <th>TC</th>
                        <th>@WebApplication1.Language.Localization.AdSoyad</th>
                        <th>@WebApplication1.Language.Localization.Email</th>
                        <th>@WebApplication1.Language.Localization.Telefon</th>
                        <th>@WebApplication1.Language.Localization.IseGirisTarihi</th>
                        <th>@WebApplication1.Language.Localization.Maas</th>
                        <th>@WebApplication1.Language.Localization.Departman</th>
                        <th>@WebApplication1.Language.Localization.Duzenle</th>
                        <th>@WebApplication1.Language.Localization.Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="">
                            <td>@item.TC</td>
                            <td>@item.AdSoyad</td>
                            <td>@item.Email</td>
                            <td>@item.Gsm</td>
                            <td>@item.iseGirisTarihi</td>
                            <td>@item.Maas</td>
                            <td>@item.Departman.DepartmanAd</td>
                            <td>
                                <form name="personelGuncelle" action="/admin/personelGuncelle" role="form" method="post">
                                    <button name="personelSil" value="@item.PersonelId" type="submit" class="btn btn-primary btn-xs"> <i class="icon-pencil"></i></button>
                                </form>
                            </td>
                            <td>
                                <form name="personelSil" action="/admin/personelSil" role="form" method="post">
                                    <button name="personelSil" value="@item.PersonelId" type="submit" class="btn btn-danger btn-xs"> <i class="icon-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

