
@{
    ViewBag.Title = "profil";
    Layout = "~/Views/admin/layout.cshtml";
}
@model IEnumerable<WebApplication1.Kullanici>
<!-- page start-->
<div class="row">
    @foreach (var item in Model)
    {
        <aside class="profile-nav col-lg-3">
            <section class="panel">
                <div class="user-heading round">
                    <a href="#">
                        @*<img src="img/profile-avatar.jpg" alt="">*@
                    </a>
                    <h1>@item.AdSoyad</h1>
                    <p>@item.Email</p>
                </div>
                <ul class="nav nav-pills nav-stacked">
                    <form method="post" action="/admin/profilDuzenle" role="form">
                        <button type="submit" class="btn btn-default btn-large" name="kullaniciId" value="@item.KullaniciId"> <i class="icon-edit"></i> @WebApplication1.Language.Localization.ProfiliDuzenle</button>
                    </form>
                </ul>
                @*@Html.ActionLink(WebApplication1.Language.Localization.Profil, "profil", "admin", new { @class = "active" })
                    @Html.ActionLink(WebApplication1.Language.Localization.ProfiliDuzenle, "profilDuzenle", "admin", new { KullaniciId = item.KullaniciId }, new { @class = "active" })*@
            </section>
        </aside>
        <aside class="profile-info col-lg-9">
            <section class="panel">
                <div class="panel-body bio-graph-info">
                    <h1>Bilgiler</h1>
                    <div class="row">
                        <div class="bio-row">
                            <p><span>TC </span>: @item.TC</p>
                        </div>
                        <div class="bio-row">
                            <p><span>@WebApplication1.Language.Localization.AdSoyad</span>: @item.AdSoyad</p>
                        </div>
                        <div class="bio-row">
                            <p><span>@WebApplication1.Language.Localization.DogumTarihi</span>: @item.DogumTarihi</p>
                        </div>
                        <div class="bio-row">
                            <p><span>@WebApplication1.Language.Localization.Departman </span>: @item.Departman.DepartmanAd</p>
                        </div>
                        <div class="bio-row">
                            <p><span>@WebApplication1.Language.Localization.Email </span>: @item.Email</p>
                        </div>
                        <div class="bio-row">
                            <p><span>@WebApplication1.Language.Localization.Telefon </span>: @item.Gsm</p>
                        </div>
                    </div>
                </div>
            </section>
        </aside>
    }
</div>
<!-- page end-->
