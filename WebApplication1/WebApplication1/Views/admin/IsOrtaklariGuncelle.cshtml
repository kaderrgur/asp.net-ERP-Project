
@{
    ViewBag.Title = "IsOrtaklariGuncelle";
    Layout = "~/Views/admin/layout.cshtml";
}

@model WebApplication1.IsOrtaklari
<form class="form-horizontal" role="form" action="/admin/IsOrtaklariGuncelleOnay" method="post">
        <div class="form-group">
            <label class="col-lg-2 control-label">ID</label>
            <div class="col-lg-6">
                <input type="text" class="form-control" name="IsOrtaklariId" value="@Model.IsOrtaklariId" readonly>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label">@WebApplication1.Language.Localization.FirmaAd</label>
            <div class="col-lg-6">
                <input type="text" class="form-control" name="FirmaAd" value="@Model.FirmaAd">
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label">@WebApplication1.Language.Localization.Telefon</label>
            <div class="col-lg-6">
                <input type="text" class="form-control" name="Gsm" value="@Model.Gsm">
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label">@WebApplication1.Language.Localization.Email</label>
            <div class="col-lg-6">
                <input type="text" class="form-control" name="Email" value="@Model.Email">
            </div>
        </div> <div class="form-group">
            <label class="col-lg-2 control-label">@WebApplication1.Language.Localization.Adres</label>
            <div class="col-lg-6">
                <input type="text" class="form-control" name="Adres" value="@Model.Adres">
            </div>
        </div>
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <button type="submit" class="btn btn-success">@WebApplication1.Language.Localization.Kaydet</button>
            <button type="button" class="btn btn-default">@WebApplication1.Language.Localization.Iptal</button>
        </div>
    </div>
</form>

