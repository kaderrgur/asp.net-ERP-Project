<body class="login-body">
    <div class="container">
        <form class="form-signin" action="index.html">
            <h2 class="form-signin-heading">GİRİŞ PANELİ</h2>
            <div class="login-wrap">
                <input type="text" class="form-control" placeholder="Kullanıcı Adı" autofocus>
                <input type="password" class="form-control" placeholder="Şifre">
                <label class="checkbox">
                    <input type="checkbox" value="remember-me"> Beni Hatırla
                    <span class="pull-right">
                        <a data-toggle="modal" href="~/#myModal"> Şifremi Unuttum?</a>
                    </span>
                </label>
                <button class="btn btn-lg btn-login btn-block" type="submit">Giriş</button>
                <p>veya sosyal ağlar üzerinden giriş yap</p>
                <div class="login-social-link">
                    <a href="~/index.html" class="facebook">
                        <i class="icon-facebook"></i>
                        Facebook
                    </a>
                    <a href="~/index.html" class="twitter">
                        <i class="icon-twitter"></i>
                        Twitter
                    </a>
                </div>
                <div class="registration">
                    Henüz bir hesabınız yok mu? 
                    <a class="" href="~/registration.html">
                        Hesap oluştur
                    </a>
                </div>
            </div>
        </form>
    </div>

